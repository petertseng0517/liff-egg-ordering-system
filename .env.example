# Flask 配置
FLASK_SECRET_KEY=your_secret_key_here
FLASK_ENV=development

# 管理員帳號配置
# 格式: username1:password1,username2:password2
ADMIN_ACCOUNTS=admin:admin123,manager:manager123

# 應用程式 URL
APP_BASE_URL=http://localhost:5005

# ===== 資料庫選擇 =====
# 設置為 true 使用 Firebase Firestore，false 使用 Google Sheets
USE_FIRESTORE=false

# ===== Google Sheets 配置 (若使用 Google Sheets) =====
# 從 Google Cloud Console 下載的服務帳號 JSON 檔案，存為 service_account.json
# 不需要在 .env 中設置，但需要檔案存在
SPREADSHEET_ID=your_google_spreadsheet_id_here

# ===== Firebase 配置 (若使用 Firestore) =====
# 從 Firebase Console 下載的服務帳號金鑰
FIREBASE_PROJECT_ID=ai-eggs-system
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=your-service-account@ai-eggs-system.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id

# ===== LINE Bot 配置 =====
LINE_CHANNEL_ACCESS_TOKEN=your_line_channel_access_token

# ===== ECPay 配置 (測試環境) =====
# 如果要使用生產環境，需要改為生產環境的 Merchant ID 和 Hash Key
ECPAY_MERCHANT_ID=2000132
ECPAY_HASH_KEY=5294y06JbISpM5x9
ECPAY_HASH_IV=v77hoKGq4kWxNNIS

# ===== 伺服器配置 =====
PORT=5005
